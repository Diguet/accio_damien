<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/bandeaudaccueil"
            android:id="@+id/imageView2"
            android:layout_marginBottom="20dp"/>

        <Button
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="@string/reservationView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/buttonReservationView"
            android:onClick="navigationToMyReservationsPage"
            android:layout_weight="0.20"
            android:layout_marginBottom="20dp"/>

      <Button
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="@string/reserver"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/buttonReservation"
            android:onClick="navigationToReservationPage"
            android:layout_weight="0.20"
            android:layout_marginBottom="20dp"/>
        <Button
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="@string/logOut"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/buttonLogout"
            android:onClick="navigationToLoginPage"
            android:layout_weight="0.20"
            android:layout_marginBottom="20dp"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <ImageView
                android:layout_width="617dp"
                android:layout_height="169dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/bandeaudubacavecvoiture"
                android:id="@+id/imageView6" />
        </LinearLayout>
</LinearLayout>