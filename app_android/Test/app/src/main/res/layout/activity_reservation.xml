<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.damien.test.ReservationActivity">
    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/numeroDeparture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="@string/numero"
        android:inputType="textPersonName"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/streetDeparture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:text="@string/street"
        android:inputType="textPersonName"
        android:layout_below="@+id/numeroDeparture"
        android:layout_marginTop="19dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/cityDeparture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:text="@string/city"
        android:inputType="textPersonName"
        android:layout_below="@+id/streetDeparture"
        android:layout_marginTop="15dp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ArrivalText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/arrival"
        android:layout_below="@+id/cityDeparture"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/numeroArrival"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:text="@string/numero"
        android:inputType="textPersonName"
        android:layout_below="@+id/ArrivalText"
        android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/streetArrival"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:text="@string/street"
        android:inputType="textPersonName"
        android:layout_below="@+id/numeroArrival"
        android:layout_marginTop="16dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/cityArrival"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:text="@string/city"
        android:inputType="textPersonName"
        android:layout_below="@+id/streetArrival"
        android:layout_marginTop="17dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonReservation"
        android:text="Reserver"
        android:layout_below="@+id/cityArrival"
        android:layout_marginTop="27dp"
        android:onClick="onReservation"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
